{
  "services": [
    {
      "name": "{{ .APP_ID }}",
      "image": "rallycommunity/rally:2.1.0",
      "isMain": true,
      "internalPort": 3000,
      "restart": "unless-stopped",
      "depends_on": {
        "{{ .APP_ID }}_db": {
          "condition": "service_healthy"
        }
      },
      "environment": [
        {
          "name": "DB_HOST",
          "value": "{{ .APP_ID }}_db"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_USER",
          "value": "rally"
        },
        {
          "name": "DB_PASSWORD",
          "value": "{{ .APP_ID }}_db_password"
        },
        {
          "name": "DB_NAME",
          "value": "rally"
        }
      ]
    },
    {
      "name": "{{ .APP_ID }}_db",
      "image": "postgres:13-alpine",
      "restart": "unless-stopped",
      "volumes": [
        {
          "source": "{{ .DATA_DIR }}/postgres",
          "target": "/var/lib/postgresql/data"
        }
      ],
      "healthcheck": {
        "test": ["CMD-SHELL", "pg_isready -U rally -d rally"],
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      },
      "environment": [
        {
          "name": "POSTGRES_USER",
          "value": "rally"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "{{ .APP_ID }}_db_password"
        },
        {
          "name": "POSTGRES_DB",
          "value": "rally"
        }
      ]
    }
  ]
}
